{
    "compilerOptions": {
        "rootDir": ".",
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "baseUrl": ".",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "api"
    ],
    "exclude": ["node_modules"],
}
